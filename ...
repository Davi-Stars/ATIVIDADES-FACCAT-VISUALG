  escreva((A ou B) e (A e C))
  escreva(A ou C e B xou A e nao B)
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 40
  var descricao: caractere
  var quantidade: inteiro
  var precoUnitario, total, desconto, totalPagar: real
  escreva("Digite a descrição do produto: ")
  leia(descricao)
  escreva("Digite a quantidade adquirida: ")
  leia(quantidade)
  escreva("Digite o preço unitário: ")
  leia(precoUnitario)
  total <- quantidade * precoUnitario
  se quantidade <= 5 entao
    desconto <- total * 0.02
  senao
    se quantidade <= 10 entao
      desconto <- total * 0.03
    senao
      desconto <- total * 0.05
    fimse
  fimse
  totalPagar <- total - desconto
  escreva("Total a pagar: ", totalPagar)
fim


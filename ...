  // solução do exercício 11
  var numCarros, valorVendas, salarioFixo, comissao, salarioFinal: real
  escreva("Digite o número de carros vendidos: ")
  leia(numCarros)
  escreva("Digite o valor total das vendas: ")
  leia(valorVendas)
  escreva("Digite o salário fixo: ")
  leia(salarioFixo)
  escreva("Digite o valor da comissão por carro vendido: ")
  leia(comissao)
  salarioFinal <- salarioFixo + (numCarros * comissao) + (valorVendas * 0.05)
  escreva("Salário final: ", salarioFinal)
fim


início
  // solução do exercício 8
  var eleitores, brancos, nulos, validos: inteiro
  escreva("Digite o número total de eleitores: ")
  leia(eleitores)
  escreva("Digite o número de votos brancos: ")
  leia(brancos)
  escreva("Digite o número de votos nulos: ")
  leia(nulos)
  escreva("Digite o número de votos válidos: ")
  leia(validos)
  escreva("Percentual de votos brancos: ", (brancos / eleitores) * 100)
  escreva("Percentual de votos nulos: ", (nulos / eleitores) * 100)
  escreva("Percentual de votos válidos: ", (validos / eleitores) * 100)
fim


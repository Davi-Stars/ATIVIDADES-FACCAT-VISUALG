  escreva("Digite o salário atual: ")
  leia(salarioAtual)
  escreva("Digite o percentual de reajuste: ")
  leia(percentual)
  novoSalario <- salarioAtual + (salarioAtual * percentual / 100)
  escreva("Novo salário: ", novoSalario)
fim


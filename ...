início
  // solução do exercício 34
  var x, y, z: real
  var resposta: caractere
  escreva("Digite dois valores: ")
  leia(x, y)
  z <- (x * y) + 5
  se z <= 0 entao
    resposta <- 'A'
  senao
    se z <= 100 entao
      resposta <- 'B'
    senao
      resposta <- 'C'
    fimse
  fimse
  escreva("Z: ", z, " Resposta: ", resposta)
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 35
  var litros: real
  var combustivel: caractere
  var valor: real
  escreva("Digite o número de litros vendidos: ")
  leia(litros)
  escreva("Digite o tipo de combustível (A-álcool, G-gasolina): ")
  leia(combustivel)
  se combustivel = "A" entao
    se litros <= 20 entao
      valor <- litros * 2.90 * 0.97
    senao
      valor <- litros * 2.90 * 0.95
    fimse
  senao
    se combustivel = "G" entao
      se litros <= 20 entao
        valor <- litros * 3.30 * 0.96
      senao
        valor <- litros * 3.30 * 0.94
      fimse
    fimse
  fimse
  escreva("Valor a pagar: ", valor)
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 36
  var idadeHomem1, idadeHomem2, idadeMulher1, idadeMulher2: inteiro
  var soma, produto: inteiro
  escreva("Digite as idades dos dois homens: ")
  leia(idadeHomem1, idadeHomem2)
  escreva("Digite as idades das duas mulheres: ")
  leia(idadeMulher1, idadeMulher2)
  se idadeHomem1 > idadeHomem2 entao
    se idadeMulher1 < idadeMulher2 entao
      soma <- idadeHomem1 + idadeMulher1
      produto <- idadeHomem2 * idadeMulher2
    senao
      soma <- idadeHomem1 + idadeMulher2
      produto <- idadeHomem2 * idadeMulher1
    fimse
  senao
    se idadeMulher1 < idadeMulher2 entao
      soma <- idadeHomem2 + idadeMulher1
      produto <- idadeHomem1 * idadeMulher2
    senao
      soma <- idadeHomem2 + idadeMulher2
      produto <- idadeHomem1 * idadeMulher1
    fimse
  fimse
  escreva("Soma: ", soma)
  escreva("Produto: ", produto)
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 37
  var kgMorango, kgMaca, precoMorango, precoMaca, total, desconto: real
  escreva("Digite a quantidade de morangos (kg): ")
  leia(kgMorango)
  escreva("Digite a quantidade de maçãs (kg): ")
  leia(kgMaca)
  se kgMorango <= 5 entao
    precoMorango <- kgMorango * 2.50
  senao
    precoMorango <- kgMorango * 2.20
  fimse
  se kgMaca <= 5 entao
    precoMaca <- kgMaca * 1.80
  senao
    precoMaca <- kgMaca * 1.50
  fimse
  total <- precoMorango + precoMaca
  se (kgMorango + kgMaca > 8) ou (total > 25) entao
    desconto <- total * 0.10
  senao
    desconto <- 0
  fimse
  escreva("Total a pagar: ", total - desconto)
fim


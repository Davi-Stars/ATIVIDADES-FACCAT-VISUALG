início
  // solução do exercício 25
  var numConta: inteiro
  var saldo, debito, credito, saldoAtual: real
  escreva("Digite o número da conta, saldo, débito e crédito: ")
  leia(numConta, saldo, debito, credito)
  saldoAtual <- saldo - debito + credito
  escreva("Saldo atual: ", saldoAtual)
  se saldoAtual >= 0 entao
    escreva("Saldo Positivo")
  senao
    escreva("Saldo Negativo")
  fimse
fim


//////////////////////////////////////////////////////////////////

início
  // solução do exercício 21
  var inicio, fim, duracao: inteiro
  escreva("Digite a hora de início e a hora de fim do jogo: ")
  leia(inicio, fim)
  se fim > inicio entao
    duracao <- fim - inicio
  senao
    duracao <- (24 - inicio) + fim
  fimse
  escreva("Duração do jogo: ", duracao, " horas")
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 22
  var horasTrabalhadas, salarioHora, salarioTotal: real
  escreva("Digite o número de horas trabalhadas no mês: ")
  leia(horasTrabalhadas)
  escreva("Digite o valor da hora: ")
  leia(salarioHora)
  se horasTrabalhadas > 160 entao
    salarioTotal <- (160 * salarioHora) + ((horasTrabalhadas - 160) * (salarioHora * 1.5))
  senao
    salarioTotal <- horasTrabalhadas * salarioHora
  fimse
  escreva("Salário total: ", salarioTotal)
fim


      escreva("VALOR INVÁLIDO")
    fimse
  fimenquanto
  escreva("Resultado da divisão: ", valor1 / valor2)
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 48
  var nota1, nota2, media: real
  repita
    escreva("Digite a primeira nota (entre 0 e 10): ")
    leia(nota1)
  ate nota1 >= 0 e nota1 <= 10
  repita
    escreva("Digite a segunda nota (entre 0 e 10): ")
    leia(nota2)
  ate nota2 >= 0 e nota2 <= 10
  media <- (nota1 + nota2) / 2
  escreva("Média: ", media)
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 49
  var nota1, nota2, media: real
  var continuar: caractere
  repita
    repita
      escreva("Digite a primeira nota (entre 0 e 10): ")
      leia(nota1)
    ate nota1 >= 0 e nota1 <= 10
    repita
      escreva("Digite a segunda nota (entre 0 e 10): ")
      leia(nota2)
    ate nota2 >= 0 e nota2 <= 10
    media <- (nota1 + nota2) / 2
    escreva("Média: ", media)
    escreva("NOVO CÁLCULO (S/N)? ")
    leia(continuar)
  ate continuar = "N"
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 50
  var i: inteiro
  para i de 1 ate 10 faca
    escreva(i)
  fimpara
fim

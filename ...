início
  // solução do exercício 23
  var nome: caractere
  var altura: real
  var sexo: caractere
  var pesoIdeal: real
  escreva("Digite o nome, sexo (M ou F) e altura: ")
  leia(nome, sexo, altura)
  se sexo = "M" entao
    pesoIdeal <- (72.7 * altura) - 58
  senao
    pesoIdeal <- (62.1 * altura) - 44.7
  fimse
  escreva("Peso ideal: ", pesoIdeal)
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 24
  var salarioFixo, valorVendas, salarioTotal: real
  escreva("Digite o salário fixo e o valor das vendas: ")
  leia(salarioFixo, valorVendas)
  se valorVendas <= 1500 entao
    salarioTotal <- salarioFixo + (valorVendas * 0.03)
  senao
    salarioTotal <- salarioFixo + (1500 * 0.03) + ((valorVendas - 1500) * 0.05)
  fimse
  escreva("Salário total: ", salarioTotal)
fim


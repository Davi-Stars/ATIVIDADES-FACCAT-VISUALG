início
  // solução do exercício 28
  var valor1, valor2, valor3: real
  escreva("Digite três valores diferentes: ")
  leia(valor1, valor2, valor3)
  se (valor1 > valor2) e (valor1 > valor3) entao
    escreva("Maior: ", valor1)
  senao
    se (valor2 > valor1) e (valor2 > valor3) entao
      escreva("Maior: ", valor2)
    senao
      escreva("Maior: ", valor3)
    fimse
  fimse
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 29
  var valor1, valor2, valor3, soma: real
  escreva("Digite três valores diferentes: ")
  leia(valor1, valor2, valor3)
  se valor1 < valor2 e valor1 < valor3 entao
    soma <- valor2 + valor3
  senao
    se valor2 < valor1 e valor2 < valor3 entao
      soma <- valor1 + valor3
    senao
      soma <- valor1 + valor2
    fimse
  fimse
  escreva("Soma dos dois maiores valores: ", soma)
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 30
  var valor1, valor2, valor3: real
  escreva("Digite três valores diferentes: ")
  leia(valor1, valor2, valor3)
  se valor1 < valor2 e valor1 < valor3 entao
    se valor2 < valor3 entao
      escreva(valor1, ", ", valor2, ", ", valor3)
    senao
      escreva(valor1, ", ", valor3, ", ", valor2)
    fimse
  senao
    se valor2 < valor1 e valor2 < valor3 entao
      se valor1 < valor3 entao
        escreva(valor2, ", ", valor1, ", ", valor3)
      senao
        escreva(valor2, ", ", valor3, ", ", valor1)
      fimse
    senao
      se valor1 < valor2 entao
        escreva(valor3, ", ", valor1, ", ", valor2)
      senao
        escreva(valor3, ", ", valor2, ", ", valor1)
      fimse
    fimse
  fimse
fim


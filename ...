  MediaAproveitamento <- (N1 + N2 * 2 + N3 * 3 + MediaExercicios) / 7
  se MediaAproveitamento >= 9 entao
    conceito <- "A"
  senao
    se MediaAproveitamento >= 7.5 entao
      conceito <- "B"
    senao
      se MediaAproveitamento >= 6 entao
        conceito <- "C"
      senao
        conceito <- "D"
      fimse
    fimse
  fimse
  escreva("Conceito: ", conceito)
fim


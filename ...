início
  // solução do exercício 1
  var A, B: inteiro
  A <- 10
  B <- 20
  A <- A + B
  B <- A - B
  A <- A - B
  escreva("A: ", A, " B: ", B)
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 2
  // a) 
  var A, B: inteiro
  A <- 10
  B <- 20
  escreva(B)
  B <- 5
  escreva(A, B)
  
  // b)
  var C: inteiro
  A <- 30
  B <- 20
  C <- A + B
  escreva(C)
  B <- 10
  escreva(B, C)
  C <- A + B
  escreva(A, B, C)
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 3
  var A, B, C: real
  A <- 4/2 + 2/4
  B <- 4/(2+2)/4
  C <- (4+2)*2-4
  escreva(A, B, C)
fim

//////////////////////////////////////////////////////////////////

início
  // solução do exercício 4
  var A, B, C, D, E, F, G, H, I, J: real
  A <- 6*(3+2)
  B <- 2+(6*(3+2))
  C <- 2+(3*6)/(2+4)
  D <- 2*(8/(3+1))
  E <- 3+(16-2)/(2*(9-2))
  F <- (6/3)+(8/2)
  G <- ((3+(8/2))*4)+(3*2)
  H <- (6*(3*3)+6)-10
  I <- (((10*8)+3)*9)
  J <- ((-12)*(-4))+(3*(-4))
  escreva(A, B, C, D, E, F, G, H, I, J)
fim

